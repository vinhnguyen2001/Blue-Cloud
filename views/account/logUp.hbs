<div class="container" style ="height: 95vh;">

    <form id="form" class="form" action="/dangki" method="POST">
        <div class="header--title">
            <h2> Đăng kí </h2>
        </div>
        <div class="form-item">
            <label for="userName">Tên đăng nhập</label>
            <input type="text" placeholder="vinhnguyen" name="username" id="userName">
            <i class="fas fa-check-circle"></i>
            <i class="fas fa-exclamation-circle"></i>
            <small>Error message</small>
        </div>
        <div class="form-item">
            <label for="fullName">Họ và tên</label>
            <input type="text" placeholder="Nguyễn Trần Vinh" name="fullname" id="fullName" />
            <i class="fas fa-check-circle"></i>
            <i class="fas fa-exclamation-circle"></i>
            <small>Error message</small>
        </div>
        <div class="form-item">
            <label for="phone">Số điện thoại</label>
            <input type="text" placeholder="0337430923" value ="0337430895" name ="phone" id="phone">
            <i class="fas fa-check-circle"></i>
            <i class="fas fa-exclamation-circle"></i>
            <small>Error message</small>
        </div>
        <div class="form-item">
            <label for="password">Mật khẩu</label>
            <input type="password" placeholder="12345678" name="password" id="password">
            <i class="fas fa-check-circle"></i>
            <i class="fas fa-exclamation-circle"></i>
            <small>Error message</small>
        </div>
        <button type="submit">Đăng Kí</button>
    </form>
</div>
